---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import { Toc } from "../components/ui/Toc";
import type { TocEntry } from "../components/ui/Toc";

interface Props {
  title?: string;
  toc?: TocEntry[];
}
const { title = "Specification - UJG", toc = [] } = Astro.props;
---

<BaseLayout title={title}>
  <Header toc={toc} title={title} />

  <div
    class="max-w-content mx-auto grid grid-cols-[1fr] md:grid-cols-[var(--width-sidebar)_1fr]"
  >
    <aside class="sidebar">
      <div class="sidebar-content">
        <div class="sidebar-title">Table of Contents</div>
        <Toc toc={toc} client:load />
      </div>
    </aside>

    <main class="spec-content">
      <slot />
    </main>
  </div>
  <footer class="spec-footer">
    <hr />
    <p>
      generated by <a target="_blank" href="https://speculator.openuji.dev"
        >Speculator</a
      >
    </p>
  </footer>
</BaseLayout>

<style>
  .layout-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
  }

  @media (min-width: 768px) {
    .layout-wrapper {
      grid-template-columns: 300px 1fr;
      gap: var(--spacing-xl);
    }
  }

  .sidebar {
    display: none;
    border-right: 1px solid var(--color-border);
    height: calc(100vh - 64px);
    position: sticky;
    top: 64px;
    overflow-y: auto;
    padding: var(--spacing-xl) var(--spacing-lg);
  }

  @media (min-width: 768px) {
    .sidebar {
      display: block;
    }
  }

  .sidebar-title {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
    margin-bottom: var(--spacing-md);
    padding-left: 0.5rem;
  }

  .sidebar-content {
    padding-bottom: 80px;
  }

  .spec-content {
    max-width: 900px;
    min-width: 0;
    margin: 0; /* Align to the left in the second column */
    padding: var(--spacing-3xl) var(--spacing-lg);
    width: 100%;
  }

  @media (min-width: 768px) {
    .spec-content {
      padding-left: 0;
    }
  }

  .spec-footer {
    margin-top: var(--spacing-3xl);
    padding: var(--spacing-lg) 0;
    color: var(--color-muted);
    font-size: 0.875rem;
  }

  .spec-footer hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin-bottom: var(--spacing-md);
  }

  .spec-footer p {
    margin: 0 auto;
    width: fit-content;
  }
</style>
