---
import { Content } from "../../../../specs/governance.md";
import HomeLayout from "@/layouts/HomeLayout.astro";
---

<HomeLayout title="Governance - UJG Spec">
    <article class="prose">
        <Content />
    </article>
</HomeLayout>

<style>
    .prose {
        max-width: 80ch;
        margin: 0 auto;
        padding: var(--spacing-3xl) var(--spacing-lg);
    }

    .prose :global(h1) {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: var(--spacing-lg);
        color: var(--color-text);
        padding-bottom: var(--spacing-sm);
        border-bottom: 2px solid var(--color-accent);
    }

    .prose :global(h2) {
        font-size: 1.75rem;
        font-weight: 600;
        margin-top: var(--spacing-2xl);
        margin-bottom: var(--spacing-md);
        color: var(--color-text);
    }

    .prose :global(h3) {
        font-size: 1.25rem;
        font-weight: 600;
        margin-top: var(--spacing-xl);
        margin-bottom: var(--spacing-sm);
        color: var(--color-text);
    }

    .prose :global(h4) {
        font-size: 1.1rem;
        font-weight: 600;
        margin-top: var(--spacing-lg);
        margin-bottom: var(--spacing-xs);
        color: var(--color-text);
    }

    .prose :global(p) {
        margin-bottom: var(--spacing-md);
        line-height: 1.7;
        color: var(--color-muted);
    }

    .prose :global(ul),
    .prose :global(ol) {
        margin-bottom: var(--spacing-md);
        padding-left: 1.5rem;
    }

    .prose :global(li) {
        margin-bottom: var(--spacing-xs);
        line-height: 1.6;
        color: var(--color-muted);
    }

    .prose :global(strong) {
        font-weight: 600;
        color: var(--color-text);
    }

    .prose :global(code) {
        font-family: monospace;
        background: var(--color-accent-soft);
        color: var(--color-accent);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.9em;
    }

    .prose :global(a) {
        color: var(--color-accent);
        text-decoration: none;
    }

    .prose :global(a:hover) {
        text-decoration: underline;
    }
</style>
