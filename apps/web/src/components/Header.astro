---
import { MobileToc } from "./ui/MobileToc";
import type { TocEntry } from "./ui/Toc";

interface Props {
  toc: TocEntry[];
  title?: string;
}

const { toc, title = "UJG Specification" } = Astro.props;
---

<header class="site-header">
  <div class="header-container">
    <div class="header-left">
      <MobileToc toc={toc} client:load />
      <a href="/" class="site-logo">
        <span class="logo-text">UJG</span>
        <span class="logo-divider">/</span>
        <span class="spec-title">{title}</span>
      </a>
    </div>
    <nav class="header-nav">
      <a
        href="https://github.com/openuji/spec-ujg/tree/main/specs/ed"
        class="nav-link">GitHub</a
      >
    </nav>
  </div>
</header>

<style>
  @import "@/styles/design-system.css";
  .site-header {
    position: sticky;
    top: 0;
    z-index: 40;
    width: 100%;
    background: var(--color-panel);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
  }

  .header-container {
    max-width: 1400px;
    height: var(--header-height);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .site-logo {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: var(--color-text);
    font-weight: 700;
    font-size: 1.1rem;
  }

  .logo-text {
    color: var(--color-accent);
  }

  .logo-divider {
    color: var(--color-border);
    font-weight: 400;
  }

  .spec-title {
    font-weight: 500;
    color: var(--color-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 200px;
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .nav-link {
    text-decoration: none;
    color: var(--color-muted);
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .spec-title {
      display: none;
    }
    .logo-divider {
      display: none;
    }
  }
</style>
